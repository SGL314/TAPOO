<Window xmlns="https://github.com/avaloniaui"
    	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    	x:Class="MeuProjetoAvalonia.MainWindow"
    	Title="Primeiro Projeto com Avalonia UI" Width="400" Height="300">
  <StackPanel Margin="10">
	<!-- Exibindo um texto -->
	<TextBlock Text="Olá, Avalonia UI!"
           	FontSize="24"
           	HorizontalAlignment="Center"
           	Margin="0 0 0 10"/>
   
	<!-- Caixa de texto para entrada de dados -->
	<TextBox x:Name="txtInput"
         	Watermark="Digite seu nome..."
         	Margin="0 0 0 10"/>
   
	<!-- Botão com evento de clique -->
	<Button Content="Clique Aqui"
        	HorizontalAlignment="Center"
        	Click="BtnClique_Click"/>
   
	<!-- Exemplo de controle ListBox para exibir itens -->
	<ListBox x:Name="listaItens"
         	Margin="0 10 0 0">
  	<ListBoxItem Content="Item 1" />
  	<ListBoxItem Content="Item 2" />
  	<ListBoxItem Content="Item 3" />
	</ListBox>
  </StackPanel>
</Window>